<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="stream_image" namespace="/stream/image" extends="struts-default">

        <action name="RandomImageStreamAction" class="SpringRandomImageStream">
            <result name="success">
                /stream/image/random_image_stream.jsp
            </result>
        </action>

        <action name="ImageRankStreamAction" class="SpringImageRankStreamAction">
            <result name="success">
                /stream/image/image_rank_stream.jsp
            </result>
        </action>
    </package>

    <package name="stream_pool" namespace="/stream/pool" extends="struts-default">
        <action name="OnePoolAction" class="SpringOnePoolAction">
            <result name="success">
                /stream/pool/one_pool.jsp
            </result>
            <result name="input" type="redirect">
                /user/user_login.jsp
            </result>
            <result name="error" type="redirect">
                /user/user_login.jsp
            </result>
        </action>
    </package>
</struts>